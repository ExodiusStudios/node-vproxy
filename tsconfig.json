{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "lib",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "types"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}